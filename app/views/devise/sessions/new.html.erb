<div class="container">	
	<div class="bs-docs-section">
	  <div class="row">
	    <div class="col-lg-12">
	      <div class="page-header">
	        <h1 id="forms">Вход</h1>
	      </div>
	    </div>
	  </div>

	  <div class="row">
	    <div class="col-lg-6">
	      <div class="well bs-component">
	        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
	          <fieldset>
	            <legend>Введите ваши регистрационные данные</legend>
	            <div class="form-group">
	              <%= f.label :email, 'Email', class: "col-lg-2 control-label" %>
	              <div class="col-lg-10">
	                <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: "form-control" %>
	              </div>
	            </div>
	            <div class="form-group">
	              <%= f.label :password, 'Пароль', class: "col-lg-2 control-label" %>
	              <div class="col-lg-10">
	                <%= f.password_field :password, autocomplete: 'off', placeholder: 'Пароль', class: "form-control" %>
	                <% if devise_mapping.rememberable? -%>
		                <div class="checkbox">
		                	<label>
		                  	<%= f.check_box :remember_me %><%= f.label :remember_me, 'Запомнить меня' %>
		                  </label>
		                </div>
		              <% end -%>
	              </div>
	            </div>
	            <div class="form-group">
	              <div class="col-lg-10">
	                <%= f.submit 'Войти', class: 'btn btn-primary' %>
	              </div>
	            </div>
	          </fieldset>
	        <% end %>
	      </div>
	    </div>
	  </div>
	</div>
</div>