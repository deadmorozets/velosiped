<div class="container">
	<div class="bs-docs-section">
		<h3> Распределить <%= @amount %> грн. <%= @person.last_name %> </h3>
			<div class="row">
			  <div class="col-lg-12">
			    <div class="bs-component">
			      <table class="table table-striped table-hover ">
			        <thead>
			          <tr>
			          	<th class='col-md-1'> </th>
			            <th class='col-md-1'>Дата выполнения</th>
			            <th class='col-md-3'>Операция</th>
			            <th class='col-md-3'>Заказ</th>
			            <th class='col-md-1'>Стоимость</th>
			            <th class='col-md-1'>Выплачено</th>
			            <th class='col-md-1'>Добавить</th>
			            <th class='col-md-1'>Удалить</th>
			          </tr>
			        </thead>
			        <tbody>
			          <% @operations_and_payments.each do |p| %>
									<tr>
										<td><%=  %></td>
										<td><%= p.finish_date %></td>
										<td><%= p.title %></td>
										<td><%= p.order.title %></td>
										<td><%= p.cost %></td>
										<td><%= p.wage_sum %></td>
										<td><%= link_to image_tag("Add.png", size: '20x20', alt: "Добавить"),
																		add_wage_path(:payment_id => @payment.id, 
																									:operation_id => p.operations_id) %></td>
									</tr>
			          <% end %>
			        </tbody>
			      </table> 
			    </div><!-- /example -->
			  </div>
			</div>

	</div>
</div>