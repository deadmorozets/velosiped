<div class="container">
	<div class="bs-docs-section">

		<div class="row">
		  <div class="col-lg-12">
		    <div class="bs-component">
		      <table class="table table-striped table-hover ">
		        <thead>
		          <tr>
		            <th class='col-md-3'>Дата выплат</th>
		            <th class='col-md-3'>Сумма</th>
		            <th class='col-md-3'>Сумма распределённая</th>
		          </tr>
		        </thead>
		        <tbody>
		          <% @payments_by_date.each do |p| %>
								<tr>
									<td><%= link_to p.payment_date, payments_day_path(:payment_date => 
																					p.payment_date.strftime("%d-%m-%Y")) %></td>
									<td><%= p.total_amount %></td>
									<td><%=  %></td>
								</tr>
		          <% end %>
		        </tbody>
		      </table> 
		    </div><!-- /example -->
		  </div>
		</div>

		  <div class="row">
		    <div class="col-lg-6">
		      <div class="well bs-component">
		        <%= form_for(@payment, url: {action: "create"}, html: {class: "form-horizontal"}) do |f| %>
			          <div class='form-group'>
			          	<%= f.label :person_id, 'Получатель', class: "col-lg-3 control-label" %>
			          	<div class="col-lg-6">
			          		<%= f.collection_select(:person_id, Person.all, :id, :last_name, {}, {:class => 'form-control'}) %>
			          	</div>
			          </div>
			          <div class="form-group">
			            <%= f.label :amount, 'Сумма', class: "col-lg-3 control-label" %>
			            <div class="col-lg-6">
			              <%= f.number_field :amount,  placeholder: '100.00', class: "form-control", step: 'any' %>
			            </div>
			          </div>
			          <div class="form-group">
			             <%= f.label :date, 'Дата', class: "col-lg-3 control-label" %>
			            <div class="col-lg-6">
			              <%= f.date_field :date, class: "form-control" %>
			            </div>
			          </div>
			          <div class="form-group">
			            <div class="col-lg-12 col-lg-offset-3">
			              <%= f.submit 'Выплатить', class: 'btn btn-primary' %> 
			            </div>
			          </div>
			      <% end %>
		      </div>
		    </div>
		  </div>

	</div>
</div>
