<div class="container">
	<div class="bs-docs-section">
		<div class="row">
		  <div class="col-lg-12">
		    <div class="bs-component">
		      <h3 id = "tables"> Дата выдачи <%= @payments.first.date %> </h3>
		      <table class="table table-striped table-hover ">
		        <thead>
		          <tr>
		            <th class='col-md-3'>Сотрудник</th>
		            <th class='col-md-3'>Сумма</th>
		            <th class='col-md-3'>Сумма распределённая</th>
		          </tr>
		        </thead>
		        <tbody>
		          <% @payments.each do |p| %>
								<tr>
									<% unless p.person.nil? %>
										<td><%= p.person.last_name %> <%= p.person.first_name %></td>	
									<% else %>
										<td> </td>
									<% end %>
									<td><%= p.amount %></td>
									<td><%= link_to p.wages.sum("amount"), operations_and_payments_path(
													:payment_id => p.id) %></td>
								</tr>
		          <% end %>
		        </tbody>
		      </table> 
		    </div><!-- /example -->
		  </div>
		</div>
	</div>
</div>
