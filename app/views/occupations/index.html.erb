<div class="container">
	<div class="bs-docs-section">

		<div class="row">
		  <div class="col-lg-12">
		    <div class="page-header">
		      <h1 id="tables">Список должностей</h1>
		    </div>

		    <div class="bs-component">
		      <table class="table table-striped table-hover ">
		        <thead>
		          <tr>
		            <th class='col-md-8'>Должность</th>
		            <th class='col-md-1'></th>
		          </tr>
		        </thead>
		        <tbody>
		        	<% @occupations.each do |p| %>
								<tr>
									<td><%= link_to p.name, edit_occupation_path(p) %></td>
									<td><%= link_to 'Удалить', occupation_path(p), :method => :delete %></td>
								</tr>
		          <% end %>  
		        </tbody>
		      </table> 
		    </div><!-- /example -->
		  </div>
		</div>

		<div>
	    <%= link_to 'Новая должность', new_occupation_path, :class => 'btn btn-success' %>
    </div>

	</div>
</div>