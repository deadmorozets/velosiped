<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-4">
      <div class="well bs-component">
        <%= form_for( @occupation, html: {class: "form-horizontal"}) do |f| %>
	        <fieldset>
	          <legend><%= @occupation.name %></legend>
	          <div class="form-group">
	            <%= f.label :name, 'Должность', class: "col-lg-3 control-label" %>
	            <div class="col-lg-9">
	              <%= f.text_field :name, autofocus: true, placeholder: 'Должность', class: "form-control" %>
	            </div>
	          </div>
	          <div class="form-group">
	            <div class="col-lg-9 col-lg-offset-3">
	              <%= f.submit 'Сохранить', class: 'btn btn-primary' %>  <%= link_to 'Отменить', occupations_path, class: 'btn btn-default' %>
	            </div>
	          </div>
	        </fieldset>
	      <% end %>
      </div>
    </div>

  </div>
</div>
