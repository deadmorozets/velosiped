<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-6">
      <div class="well bs-component">
        <%= form_for([@order, @operation], html: {class: "form-horizontal"}) do |f| %>
	        <fieldset>
	          <legend><%= @order.title %></legend>
	          <div class="form-group">
	            <%= f.label :title, 'Операция', class: "col-lg-3 control-label" %>
	            <div class="col-lg-9">
	              <%= f.text_field :title, autofocus: true, placeholder: 'Наименование', class: "form-control" %>
	              <div class="checkbox">
	          			<label>
	          				<%= f.check_box :signed %> Заявка подписана	
	          			</label>
	          		</div>
	            </div>
	          </div>
	          <div class='form-group'>
	          	<%= f.label :person_id, 'Исполнитель', class: "col-lg-3 control-label" %>
	          	<div class="col-lg-4">
	          		<%= f.collection_select(:person_id, Person.all, :id, :last_name, {}, {:class => 'form-control'}) %>
	          	</div>
	          </div>
	          <div class="form-group">
	            <%= f.label :cost, 'Стоимость', class: "col-lg-3 control-label" %>
	            <div class="col-lg-4">
	              <%= f.number_field :cost,  placeholder: '100.00', class: "form-control" %>
	            </div>
	          </div>
	          <div class="form-group">
	             <%= f.label :finish_date, 'Выполнено', class: "col-lg-3 control-label" %>
	            <div class="col-lg-4">
	              <%= f.date_field :finish_date, :value => @operation.finish_date.try(:strftime, "%d/%m/%Y"), placeholder: 'дд/мм/гггг', class: "form-control" %>
	            </div>
	          </div>
	          <div class="form-group">
	            <%= f.label :duration, 'Трудозатраты', class: "col-lg-3 control-label" %>
	            <div class="col-lg-4">
	              <%= f.number_field :duration, placeholder: 'чел. смен', class: "form-control" %>
	            </div>
	          </div>
	          <div class="form-group">
	            <div class="col-lg-12 col-lg-offset-3">
	              <%= f.submit 'Сохранить', class: 'btn btn-primary' %>  <%= link_to 'Отменить', edit_order_path(@order), class: 'btn btn-default' %>
	            </div>
	          </div>
	        </fieldset>
	      <% end %>
      </div>
    </div>
  </div>
</div>