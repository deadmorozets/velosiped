<div class="container">
	<div class="bs-docs-section">

		<div class="row">
		  <div class="col-lg-12">
		    <div class="page-header">
		      <h1 id="tables">В работе</h1>
		    </div>

		    <div class="bs-component">
		      <table class="table table-striped table-hover ">
		        <thead>
		          <tr>
		            <th class='col-md-3'>Заказ</th>
		            <th class='col-md-2'>ETA</th>
		            <th class='col-md-2'>Операция</th>
		            <th class='col-md-2'>Исполнитель</th>
		            <th class='col-md-2'>Стоимость</th>
		            <th class='col-md-1'></th>
		          </tr>
		        </thead>
		        <tbody>
		          <% @operations.each do |p| %>
								<tr>
									<% if p.order.signed %>
										<td>+ <%= link_to p.order.title, edit_order_path(p.order) %></td>
									<% else %>
										<td>- <%= link_to p.order.title, edit_order_path(p.order) %></td>
									<% end %>
									<td><%= p.order.etc_date %></td>
									<% if p.signed %>
										<td>+ <%= link_to p.title, edit_order_operation_path(p.order, p) %></td>
									<% else %>
										<td>- <%= link_to p.title, edit_order_operation_path(p.order, p) %></td>
									<% end %>
									<td><%= p.person.last_name %> <%= p.person.first_name %></td>
									<td><%= p.cost %></td>
									<td><%= link_to image_tag("Tasks.png", size: '20x20', alt: "Выполнено"), 
										finished_operation_path(p) %> </td>
								</tr>
		          <% end %>
		        </tbody>
		      </table> 
		    </div><!-- /example -->
		  </div>
		</div>

		<div>

    </div>

	</div>
</div>
