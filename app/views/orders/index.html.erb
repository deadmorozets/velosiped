<div class="container">
	<div class="bs-docs-section">

		<div class="row">
		  <div class="col-lg-12">
		    <div class="page-header">
		      <h1 id="tables">Список заказов</h1>
		    </div>

		    <div class="bs-component">
		      <table class="table table-striped table-hover ">
		        <thead>
		          <tr>
		            <th class='col-md-5'>Название</th>
		            <th class='col-md-2'>Начат</th>
		            <th class='col-md-2'>Нужно сдать</th>
		            <th class='col-md-2'>Сдан</th>
		            <th class='col-md-1'></th>
		          </tr>
		        </thead>
		        <tbody>
		          <% @orders.each do |p| %>
								<tr>
									<% if p.signed %>
										<td> + <%= link_to p.title, edit_order_path(p) %></td>
									<% else %>
										<td> - <%= link_to p.title, edit_order_path(p) %></td>
									<% end %>
									<td><%= p.start_date %></td>
									<td><%= p.etc_date %></td>
									<td><%= p.finish_date %></td>
									<td><%= link_to 'Удалить', order_path(p), :method => :delete %></td>
								</tr>
		          <% end %>
		        </tbody>
		      </table> 
		    </div><!-- /example -->
		  </div>
		</div>

		<div>
	    <%= link_to 'Новый заказ', new_order_path, :class => 'btn btn-success' %>
	    <%= link_to 'В работе', operations_in_hand_path, :class => 'btn btn-info' %>
    </div>

	</div>
</div>
