<div class="container">
	<div class="bs-docs-section">

		<div class="row">
		  <div class="col-lg-12">
		    <div class="page-header">
		      <h1 id="tables">Список заказов</h1>
		    </div>

		    <div class="bs-component">
		      <table class="table table-striped table-hover ">
		        <thead>
		          <tr>
		            <th class='col-md-4'>Название</th>
		            <th class='col-md-2'>Начат</th>
		            <th class='col-md-2'>Ожидается</th>
		            <th class='col-md-2'>Сдан</th>
		            <th class='col-md-1'></th>
		            <th class='col-md-1'></th>
		          </tr>
		        </thead>
		        <tbody>
		          <% @orders.each do |p| %>
								<tr>
									<td><%= p.title %></td>
									<td><%= p.start_date %></td>
									<td><%= p.etc_date %></td>
									<td><%= p.finish_date %></td>
									<td><%= link_to 'Подробнее', edit_order_path(p) %></td>
			                		<td><%= link_to 'Удалить', order_path(p), :method => :delete %></td>
								</tr>
		          <% end %>
		        </tbody>
		      </table> 
		    </div><!-- /example -->
		  </div>
		</div>

		<div>
	    <%= link_to 'Новый заказ', new_order_path, :class => '' %>
    </div>

	</div>
</div>
