<div class="container">
	<div class="bs-docs-section">

		<div class="row">
		  <div class="col-lg-12">
		    <div class="bs-component">
		      <table class="table table-striped table-hover ">
		        <thead>
		          <tr>
		            <th class='col-md-5'>Наименование заказа</th>
		            <th class='col-md-2'>Начат</th>
		            <th class='col-md-2'>Нужно сдать</th>
		            <th class='col-md-2'>Сдан</th>
		            <th class='col-md-1'></th>
		          </tr>
		        </thead>
		        <tbody>
		          <% @orders.each do |p| %>
								<tr>
									<% if p.signed %>
										<td> + <%= link_to p.title, edit_order_path(p) %></td>
									<% else %>
										<td> - <%= link_to p.title, edit_order_path(p) %></td>
									<% end %>
									<td><%= p.start_date %></td>
									<td><%= p.etc_date %></td>
									<td><%= p.finish_date %></td>
									<td><%= link_to image_tag("Full.png", size: '20x20', alt: "Удалить"), order_path(p), :method => :delete %></td>
								</tr>
		          <% end %>
		        </tbody>
		      </table> 
		    </div><!-- /example -->
		  </div>
		</div>

		<div>
	    <%= link_to 'Новый заказ', new_order_path, :class => 'btn btn-success' %>
	    <%= link_to 'В работе', operations_in_hand_path, :class => 'btn btn-info' %>
	    <div class="btn-group">
        <a href="#" <% if session[:orders_filter] == '0' || 
        									session[:orders_filter] == '1' %>
        									class="btn btn-warning"
        						<% else %>
        									class="btn btn-info"
        						<% end %>
        										>Фильтр</a>
        <a href="#" <% if session[:orders_filter] == '0' || 
        									session[:orders_filter] == '1' %>
        									class="btn btn-warning dropdown-toggle" 
										<% else %>
													class="btn btn-info dropdown-toggle"
										<% end %>
        									data-toggle="dropdown"><span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Текущие', orders_path(:orders_filter => '0') %></li>
          <li><%= link_to 'Выполненные', orders_path(:orders_filter => '1') %></li>
          <li class="divider"></li>
          <li><%= link_to 'Все', orders_path(:orders_filter => '2') %></li>
        </ul>
      </div>
    </div>	

	</div>
</div>
