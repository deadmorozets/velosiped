<div class="row">
  <div class="col-lg-9">
    <div class="well bs-component">
      <%= form_for( @order, html: {class: "form-horizontal"}) do |f| %>
        <fieldset>
          <legend><%= @order.title %></legend>
          <div class="form-group">
            <%= f.label :title, 'Наименование', class: "col-lg-2 control-label" %>
            <div class="col-lg-10">
              <%= f.text_field :title, autofocus: true, placeholder: 'Наименование', class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :start_date, 'Дата начала', class: "col-lg-2 control-label" %>
            <div class="col-lg-2">
              <%= f.date_field :start_date %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10">
              <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>