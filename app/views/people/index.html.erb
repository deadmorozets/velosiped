<div class="container">
	<div class="bs-docs-section">

		<div class="row">
		  <div class="col-lg-12">
		    <div class="page-header">
		      <h1 id="tables">Список сотрудников</h1>
		    </div>

		    <div class="bs-component">
		      <table class="table table-striped table-hover ">
		        <thead>
		          <tr>
		            <th class='col-md-4'>Фамилия</th>
		            <th class='col-md-4'>Имя</th>
		            <th class='col-md-3'>Должность</th>
		            <th class='col-md-1'></th>
		          </tr>
		        </thead>
		        <tbody>
		        	<% @people.each do |p| %>
								<tr>
									<td><%= link_to p.last_name, edit_person_path(p) %></td>
									<td><%= p.first_name %></td>
									<td><%=  %></td>
									<td><%= link_to 'Удалить', person_path(p), :method => :delete %></td>
								</tr>
		          <% end %>  
		        </tbody>
		      </table> 
		    </div><!-- /example -->
		  </div>
		</div>

		<div>
	    <%= link_to 'Новый сотрудник', new_person_path, :class => 'btn btn-success' %>
    </div>

	</div>
</div>
