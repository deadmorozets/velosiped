<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-4">
      <div class="well bs-component">
        <%= form_for( @person, html: {class: "form-horizontal"}) do |f| %>
	        <fieldset>
	          <legend><%= @person.first_name %> <%= @person.last_name %></legend>
	          <div class="form-group">
	            <%= f.label :last_name, 'Фамилия', class: "col-lg-3 control-label" %>
	            <div class="col-lg-9">
	              <%= f.text_field :last_name, autofocus: true, placeholder: 'Фамилия', class: "form-control" %>
	            </div>
	          </div>
	          <div class="form-group">
	            <%= f.label :first_name, 'Имя', class: "col-lg-3 control-label" %>
	            <div class="col-lg-9">
	              <%= f.text_field :first_name, placeholder: 'Имя', class: "form-control" %>
	            </div>
	          </div>
	          <div class="form-group">
	          	<%= f.collection_select(:occupation_id, Occupation.all, :id, :name) %>
	          </div>	
	          <div class="form-group">
	            <div class="col-lg-9 col-lg-offset-3">
	              <%= f.submit 'Сохранить', class: 'btn btn-primary' %>  <%= link_to 'Отменить', people_path, class: 'btn btn-default' %>
	            </div>
	          </div>
	        </fieldset>
	      <% end %>
      </div>
    </div>

  </div>
</div>
